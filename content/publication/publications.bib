	journal = {Agricultural and Forest Meteorology},
	author = {Zipper, Samuel C. and Loheide, Steven P.},
	month = oct,
	year = {2014},
	keywords = {Drought response, Thermal imagery, Yield monitoring, energy balance, evapotranspiration, precision agriculture, spatial heterogeneity, male author},
	pages = {91--102},
	file = {ZipperLoheide-2014-HRMET.pdf:C\:\\Users\\Sam\\OneDrive - The University of Kansas\\References\\ZipperLoheide-2014-HRMET.pdf:application/pdf}
}

@article{booth_is_2016,
	title = {Is groundwater recharge always serving us well? {Water} supply provisioning, crop production, and flood attenuation in conflict in {Wisconsin}, {USA}},
