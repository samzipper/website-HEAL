@article{motew_comparing_2019,
	title = {Comparing the effects of climate and land use on surface water quality using future watershed scenarios},
	volume = {693},
	copyright = {All rights reserved},
	issn = {0048-9697},
	url = {http://www.sciencedirect.com/science/article/pii/S0048969719334047},
