	month = oct,
	year = {2016},
	keywords = {Groundwater, Water supply, crop production, flooding, recharge, Hydrologic services, male author},
	pages = {153--165},
	file = {BoothEtAl-2016-GroundwaterEcosystemServices.pdf:C\:\\Users\\Sam\\OneDrive - The University of Kansas\\References\\BoothEtAl-2016-GroundwaterEcosystemServices.pdf:application/pdf}
